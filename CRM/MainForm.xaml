                    </StackPanel>
                </Button>
            </ToolBar>
        </Border>
        <Border Height="30" Background="LightSteelBlue" DockPanel.Dock="Bottom">
            <TextBlock Background="#FFECECEC">Status</TextBlock>
        </Border>
        <!--<Border Height="80" Background="Azure" DockPanel.Dock="Right">
            <TextBlock>Right Side</TextBlock>
        </Border>-->
        <Border Background="#ffffff">
            <Grid>
                <TabControl Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Stretch" Name="tabControl1" VerticalAlignment="Stretch"  
                            Grid.RowSpan="2" TabStripPlacement="Left">
                    <TabItem Name="tabItem1">
                        <TabItem.Header>
                            <TextBlock Margin="3">
                        <StackPanel Orientation="Horizontal" Width="120">
                            <Image Source="{DynamicResource ImageSource6}" Width="50" Height="50" HorizontalAlignment="Left" Margin="0 0 5 0 "/>
                            <TextBlock Text="Tasks" VerticalAlignment="Center" HorizontalAlignment="Right" />
                        </StackPanel>                    
                            </TextBlock>
                        </TabItem.Header>

                        <StackPanel Orientation="Vertical" Height="240" VerticalAlignment="Top" >
                            <Grid Height="56">
                                <TextBlock x:Name="tblUserName" Text="" Height="30" FontSize="18" Foreground="#FF053A70" ForceCursor="True" Margin="0,13,535,19" HorizontalAlignment="Right" Width="328"  />
                                <TextBlock Text="   Current Tasks" FontSize="16" Margin="374,12,386,14" Height="30" />
                            </Grid>
                            <Grid>
                                <DataGrid x:Name="dgTasksList" Margin="0,0,0,-522" SelectionChanged="dgTasksList_SelectionChanged" SelectionMode="Single"   >
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="{x:Type DataGridColumnHeader}">
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="Background" Value="LightGray" />
                                            <Setter Property="BorderThickness" Value="1" />
                                            <Setter Property="BorderBrush" Value="Black" />
                                            <Setter Property="Height" Value="25" />
                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>
                                </DataGrid>
                            </Grid>
                        </StackPanel>

                    </TabItem>
                    <TabItem Name="tabItem2">
                        <TabItem.Header>
                            <TextBlock Margin="3">
                        <StackPanel Orientation="Horizontal" Width="120">
                            <Image Source="{DynamicResource ImageSource2}" Width="50" Height="50" HorizontalAlignment="Left" Margin="0 0 5 0 " />
                            <TextBlock Text="Contacts" VerticalAlignment="Center" HorizontalAlignment="Right" Width="59" />
                        </StackPanel>
                            </TextBlock>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Name="tabItem3">
