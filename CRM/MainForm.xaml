        <Border Height="60" Background="#FFD5D8D8" DockPanel.Dock="Top">
            <ToolBar Height="60">
                <Button x:Name="btNewTasks" Width="60" Height="50" Margin="10 0 10 0" BorderBrush="#FFCDCECF" Background="Transparent" FontSize="14" Click="btNewTasks_Click">
                    <StackPanel Orientation="Horizontal" Width="50">
                        <Image Source="{DynamicResource ImageSource9}" Width="50" Height="50" HorizontalAlignment="Left" />
                    </StackPanel>
                </Button>
                <Button x:Name="btNewContact" Width="60" Height="50" Margin="10 0 10 0" Background="Transparent" BorderBrush="#FFCDCECF" FontSize="14" Click="btNewContact_Click">
                    <StackPanel Orientation="Horizontal" Width="50">
                        <Image Source="{DynamicResource ImageSource10}" Width="50" Height="50" HorizontalAlignment="Left"  />
                    </StackPanel>
                </Button>
                <Button x:Name="btNewClient" Width="60" Height="50" Margin="10 0 10 0" Background="Transparent" BorderBrush="#FFCDCECF" FontSize="14" Click="btNewClient_Click">
                    <StackPanel Orientation="Horizontal" Width="50">
