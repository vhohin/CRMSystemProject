    <DockPanel Grid.Column="1" Grid.ColumnSpan="2">
        <!--<Border Height="25" Background="AliceBlue" DockPanel.Dock="Top">
            <TextBlock>Menu</TextBlock>
        </Border>-->
        <Border Height="60" Background="#FFD5D8D8" DockPanel.Dock="Top">
            <ToolBar Height="60">
                <Button x:Name="btNewTasks" Width="60" Height="50" Margin="10 0 10 0" BorderBrush="#FFCDCECF" Background="Transparent" FontSize="14" Click="btNewTasks_Click">
                    <StackPanel Orientation="Horizontal" Width="50">
                        <Image Source="{DynamicResource ImageSource9}" Width="50" Height="50" HorizontalAlignment="Left" />                        
                    </StackPanel>
                </Button>
                <Button x:Name="btNewContact" Width="60" Height="50" Margin="10 0 10 0" Background="Transparent" BorderBrush="#FFCDCECF" FontSize="14" Click="btNewContact_Click">
                    <StackPanel Orientation="Horizontal" Width="50">
                        <Image Source="{DynamicResource ImageSource10}" Width="50" Height="50" HorizontalAlignment="Left"  />                        
                    </StackPanel>
                </Button>
                <Button x:Name="btNewClient" Width="60" Height="50" Margin="10 0 10 0" Background="Transparent" BorderBrush="#FFCDCECF" FontSize="14" Click="btNewClient_Click">
                    <StackPanel Orientation="Horizontal" Width="50">
                        <Image Source="{DynamicResource ImageSource11}" Width="50" Height="50" HorizontalAlignment="Left"  />
                    </StackPanel>
                </Button>
                <Button x:Name="btNewEmployee" Width="60" Height="50" Margin="10 0 10 0" Background="Transparent" BorderBrush="#FFCDCECF" FontSize="14" Click="btNewEmployee_Click">
                    <StackPanel Orientation="Horizontal" Width="50">
                        <Image Source="{DynamicResource ImageSource12}" Width="50" Height="50" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Button>
            </ToolBar>
        </Border>
        <Border Height="30" Background="LightSteelBlue" DockPanel.Dock="Bottom">
            <TextBlock Background="#FFECECEC">Status</TextBlock>
        </Border>
        <!--<Border Height="80" Background="Azure" DockPanel.Dock="Right">
            <TextBlock>Right Side</TextBlock>
        </Border>-->
        <Border Background="#FFFFFF">
            <Grid RenderTransformOrigin="0.313,0.475">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130" MinWidth="130" MaxWidth="350"></ColumnDefinition>
                    <ColumnDefinition Width="10"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <WrapPanel Grid.Row="1" MinWidth="60">
                    <Button x:Name="btContacts" Width="120" Height="50" Margin="5" Background="Transparent" BorderBrush="#00000000" FontSize="14" Click="btContacts_Click">
                        <StackPanel Orientation="Horizontal" Width="120">
                            <Image Source="{DynamicResource ImageSource2}" Width="50" Height="50" HorizontalAlignment="Left" Margin="0 0 5 0 " />
                            <TextBlock Text="Contacts" VerticalAlignment="Center" HorizontalAlignment="Right" Width="59" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btClients" Width="120" Height="50" Margin="5" BorderBrush="White" Background="White" FontSize="14" Click="btClients_Click">
                        <StackPanel Orientation="Horizontal"  Width="120">
                            <Image Source="{DynamicResource ImageSource3}" Width="50" Height="50" HorizontalAlignment="Left" Margin="0 0 5 0 "/>
                            <TextBlock Text="Clients" VerticalAlignment="Center" HorizontalAlignment="Right" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btContracts" Width="120" Height="50" Margin="5" BorderBrush="White" Background="White" FontSize="14" Click="btContracts_Click">
                        <StackPanel Orientation="Horizontal" Width="120">
                            <Image Source="{DynamicResource ImageSource4}" Width="50" Height="50" HorizontalAlignment="Left" Margin="0 0 5 0 "/>
                            <TextBlock Text="Contracts" VerticalAlignment="Center" HorizontalAlignment="Right" Width="65" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btEmployees" Width="120" Height="50" Margin="5" BorderBrush="White" Background="White" FontSize="14" Click="btEmployees_Click">
                        <StackPanel Orientation="Horizontal" Width="120">
                            <Image Source="{DynamicResource ImageSource5}" Width="50" Height="50" HorizontalAlignment="Left" Margin="0 0 5 0 "/>
                            <TextBlock Text="Employees" VerticalAlignment="Center" HorizontalAlignment="Right" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btServices" Width="120" Height="50" Margin="5" BorderBrush="White" Background="White" FontSize="14" Click="btServices_Click">
                        <StackPanel Orientation="Horizontal" Width="120">
                            <Image Source="{DynamicResource ImageSource8}" Width="50" Height="50" HorizontalAlignment="Left" Margin="0 0 5 0 "/>
                            <TextBlock Text="Services" VerticalAlignment="Center" HorizontalAlignment="Right" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btProducts" Width="120" Height="50" Margin="5" BorderBrush="White" Background="White" FontSize="14" Click="btProducts_Click">
                        <StackPanel Orientation="Horizontal" Width="120">
                            <Image Source="{DynamicResource ImageSource7}" Width="50" Height="50" HorizontalAlignment="Left" Margin="0 0 5 0 "/>
                            <TextBlock Text="Products" VerticalAlignment="Center" HorizontalAlignment="Right" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btTasks" Width="120" Height="50" Margin="5" BorderBrush="White" Background="White" FontSize="14" Click="btTasks_Click">
                        <StackPanel Orientation="Horizontal" Width="120">
                            <Image Source="{DynamicResource ImageSource6}" Width="50" Height="50" HorizontalAlignment="Left" Margin="0 0 5 0 "/>
                            <TextBlock Text="Tasks" VerticalAlignment="Center" HorizontalAlignment="Right" />
                        </StackPanel>
                    </Button>
                </WrapPanel>
                <WrapPanel Grid.Row="1" Grid.Column="3" MinWidth="160">
                    <StackPanel Orientation="Horizontal" Width="661" Height="50" Background="LightGray" >
                        <TextBlock Text="Current Tasks" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="16" />
                    </StackPanel>
                </WrapPanel>
                <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="5" Width="5" Background= "#FFC3C7BC" 
                      VerticalAlignment="Stretch" HorizontalAlignment="Center"></GridSplitter>
            </Grid>
        </Border>
    </DockPanel>

</Window>
